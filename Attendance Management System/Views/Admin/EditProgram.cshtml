@model Attendance_Management_System.Models.ITIProgram

<h2>Edit Program</h2>

<form asp-action="EditProgram" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ProgramIndex" class="btn btn-secondary">Back to List</a>
</form>

@if (ViewBag.EditSuccessMessage != null)
{
    <div class="alert alert-success mt-3">
        @ViewBag.EditSuccessMessage
    </div>
}
