@model Attendance_Management_System.Models.Instructor

@section NavList {
    @Html.Partial("navBar")
}

<h2>Delete Instructor</h2>

<h3>Are you sure you want to delete this instructor?</h3>
<div>
    <h4>Instructor Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">National ID</dt>
        <dd class="col-sm-10">@Model.NationalId</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>
    </dl>

    <form asp-action="DeleteInstructor" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="InstructorIndex" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
