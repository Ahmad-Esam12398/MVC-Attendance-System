@{
    string userName = User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Styles -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />

    @RenderSection("Styles", required: false)
    <!-- End Styles -->
    <title>Document</title>
</head>
<body id="body-pd">

    <header class="header" id="header">
        <div class="header_toggle">
            <i class="bx bx-menu" id="header-toggle"></i>
        </div>
        <div class="header_username">Welcome, @userName<span>@ViewData["Name"]</span> <img src="~/images/user.png" alt="" /></div>
        <!-- <div class="header_img"><img src="user.png" alt="" /></div> -->
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="home" class="nav_logo">
                    <div class="sidebar_img"><img src="~/images/ITI.png" alt="" /></div>
                    <span class="nav_logo-name">Attendace System</span>
                </a>
                <div class="nav_list">
                </div>
                @if (User.IsInRole(RolesValues.StudentsAffairs) || User.IsInRole(RolesValues.SecurityRole))
                {
                    <partial name="./../Employee/_navButtons" />
                }
                <!--Section Nav-List -->
                @RenderSection("NavList", required: false)
            </div>
            <div class="nav_last">
                <a asp-action="Index" asp-controller="Account" class="nav_link text-decoration-none">
                    <i class="bx bx-user nav_icon"></i>
                    <span class="nav_name">Profile</span>
                </a>
                <a asp-area="Identity" asp-page="/Account/Logout" class="nav_link text-decoration-none">
                    <i class="bx bx-log-out nav_icon"></i>
                    <span class="nav_name">SignOut</span>
                </a>
            </div>
        </nav>
    </div>
    <!--Body -->
    @RenderBody()


    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- End Scripts -->
    <script src="~/js/layout.js" type="module"></script>

    @RenderSection("Scripts", required: false)


</body>
</html>
