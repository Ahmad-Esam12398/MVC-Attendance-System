@model List<AttendanceViewData>

@{
    ViewData["Title"] = "Student Attendence";
    List<string> StatusList = ["Attend", "Absent", "Permission"];
    int id = ViewBag.id;

}
@section Styles{
    <link rel=" stylesheet" href="~/css/Employee.css" />
}

@section NavList{
    @Html.Partial("NavButtons_student",id)
}
<div class="mt-4 form-control d-flex justify-content-between">
    <div class="mt-3" style="width: 12% !important;">
        <label for="Status">Status</label>
        <select id="Status" class="form-control">
            <option value="">All</option>
            @foreach (var status in StatusList)
            {
                <option value="@status">@status</option>
            }
        </select>
    </div>

    <div class="mt-2 d-flex flex-wrap">
        <label for="dateFrom">From</label>
        <input id="dateFrom" type="date" class="form-control" />
        <label for="dateTo">To</label>
        <input id="dateTo" type="date" class="form-control" />
    </div>

</div>
<div>
<table id="mytable" class="table table-hover text-center table-striped">
    <thead>
        <tr class="text-center">
                <th>Attendance Date</th>
                <th>Checked In</th>
                <th>Checked Out</th>
                <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student_Attend in Model)
        {
            <tr>
                <td>
                    @student_Attend.Date
                </td>
                <td>
                    @student_Attend.Time_in
                </td>
                <td>
                    @student_Attend.Time_out
                </td>
                <td>
                    @student_Attend.Status
                </td>
            </tr>
            
        }

    </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#mytable').DataTable({
                // DataTables initialization options
                paging: true,
                ordering: true,
                searching: true,
                // Add more options as needed

                // Custom buttons configuration
                buttons: [
                    {
                        extend: 'copy',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'csv',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'excel',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'pdf',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'print',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ]
            });

            // Additional JavaScript logic for handling events, filters, etc.
            // For example:
            $('#Status').on('change', function () {
                table.column(3).search(this.value).draw();
            });

            // Date range filtering
            $('#dateFrom, #dateTo').on('change', function () {
                var fromDate = $('#dateFrom').val();
                var toDate = $('#dateTo').val();
                table.columns(0).search(fromDate + '|' + toDate, true, false).draw();
            });
        });
    </script>
}
