@model IEnumerable<ScheduleDto>

@{
    ViewData["Title"] = "Student Schedule";
    int id = ViewBag.id;
    var sortedModel = Model.OrderByDescending(item => item.Date);

}

@section NavList {
    @Html.Partial("NavButtons_student", id)
}

<div class="container">
    @* Filters Section*@
    <div class="mt-4 form-control d-flex justify-content-between">

    <div class="mt-2 d-flex flex-wrap">
        <label for="dateFrom">From</label>
        <input id="dateFrom" type="date" class="form-control" />
        <label for="dateTo">To</label>
        <input id="dateTo" type="date" class="form-control" />
    </div>
    </div>

    @* Main Table Section*@
    <table id="myTable" class="display">
        @* Table Header*@
        <thead>
            <tr>
                <th>Date</th>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>Actions</th>
            </tr>
        </thead>
        @* Table Body*@
        <tbody>
            @foreach (var item in sortedModel)
            {
                <tr>
                    <td> @item.Date &nbsp;&nbsp; @DateTime.Parse(item.Date).ToString("dddd", System.Globalization.CultureInfo.InvariantCulture)</td>
                    <td>@item.StartTime</td>
                    <td>@item.EndTime</td>
                    @* Actions *@
                    <td>

                        <a asp-action="ScheduleEvents" asp-controller="student" asp-route-scheduleId="@item.Id" asp-route-stdId="@id">
                            <i class='bx bx-search' style="transform: scale(1.7);"></i>
                            <span class="nav_name">Details</span>

                        </a>
                      
                        

                        
                    </td>
                </tr>
            }

            
           
        </tbody>
    </table>


</div>


@section Scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
