@model Attendance_Management_System.Models.User

@{
    ViewData["Title"] = "Edit Information";
}

<h2>Edit Information</h2>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="NationalId">National ID:</label>
        <input asp-for="NationalId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="UserName">User Name:</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber:</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender">Gender:</label>
        <input asp-for="Gender" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" asp-controller="Account" class="btn btn-secondary">Cancel</a>
</form>
