@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table id="mytable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Track</th>
            <th>Program</th>
            <th>University</th>
            <th>Faculty</th>
            <th>Gender</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.UserName</td>
                <td>@student.Track.Name</td>
                <td>@student.Track.Program.Name</td>
                <td>@student.University</td>
                <td>@student.Faculty</td>
                <td>@student.Gender</td>
                <td>@student.Phone</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#mytable').DataTable({
                buttons: 
                [
                    'copy', 'excel', 'pdf'
                ],
                order: [[1, 'asc'], [0, 'asc']],
                pageLength: 25,
            });

        });
    </script>
}


